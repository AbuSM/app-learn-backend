# Production Environment Configuration
NODE_ENV=production

# Server
PORT=3000
HOSTNAME=0.0.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=app_learn_user
DB_PASSWORD=change_me_to_secure_password
DB_DATABASE=app_learn_db

# JWT Configuration
JWT_SECRET=change_me_to_a_very_secure_random_string_min_32_chars
JWT_EXPIRES_IN=7d

# CORS Configuration (Updated for production)
CORS_ORIGIN=true

# Application URL (for email links, etc.)
APP_URL=https://app-learn.mooo.com

# Email Configuration (Optional - for password reset, etc.)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=noreply@app-learn.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers
HELMET_ENABLED=true

# API Documentation
SWAGGER_ENABLED=true
SWAGGER_PATH=/api/docs
